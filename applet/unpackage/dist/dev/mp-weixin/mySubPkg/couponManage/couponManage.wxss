/* 水平间距 */
page {
  background-color: #EFEFF4;
}
.order-status {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  background-color: #ffffff;
}
.order-status .order-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 80rpx;
  color: #7F7F7F;
}
.order-status .activate {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 25%;
  height: 80rpx;
  color: #0EB117;
  border-bottom: #0EB117 solid 4rpx;
}
.coupon-List {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}
.coupon-List .coupon-item {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-bottom: 30rpx;
}
.coupon-List .coupon-item .wrap {
  display: flex;
  flex-direction: row;
}
.coupon-List .coupon-item .wrap .coupon-price {
  width: 230rpx;
  height: 220rpx;
  background: radial-gradient(circle at top right, transparent 30rpx, #D11E22 0) top right, radial-gradient(circle at bottom right, transparent 30rpx, #D11E22 0) bottom right;
  background-size: 100% 60%;
  background-repeat: no-repeat;
  color: #000000;
  width: 210rpx;
  border-radius: 10px 0 0 10px;
}
.coupon-List .coupon-item .wrap .coupon-price .price {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.coupon-List .coupon-item .wrap .coupon-price .price .value {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}
.coupon-List .coupon-item .wrap .coupon-price .price .limit {
  color: #ffffff;
  font-size: 27rpx;
}
.coupon-List .coupon-item .wrap .coupon-info {
  height: 220rpx;
  width: 270rpx;
  background-color: #ffffff;
  background: radial-gradient(circle at top left, transparent 30rpx, #ffffff 0) top left, radial-gradient(circle at bottom left, transparent 30rpx, #ffffff 0) bottom left;
  background-size: 100% 60%;
  background-repeat: no-repeat;
  color: #000000;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.coupon-List .coupon-item .wrap .coupon-info .coupon-name {
  height: 40rpx;
  background: linear-gradient(to right, #C81B21, #E72425);
  border-radius: 15rpx;
  margin: 10rpx auto 20rpx 40rpx;
  font-size: 25rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  color: #ffffff;
}
.coupon-List .coupon-item .wrap .coupon-info .coupon-name .value {
  margin: 4rpx 4rpx 4rpx 4rpx;
}
.coupon-List .coupon-item .wrap .coupon-info .time {
  margin: 10rpx aut0 20rpx 20rpx;
  font-size: 25rpx;
}
.coupon-List .coupon-item .wrap .coupon-info .time .value {
  margin-left: 40rpx;
}
.coupon-List .coupon-item .wrap .coupon-info .type {
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  color: #999999;
}
.coupon-List .coupon-item .wrap .coupon-info .type .value {
  margin: 20rpx 0 0 40rpx;
}
.coupon-List .coupon-item .wrap .coupon-info .type uni-icons {
  margin: 22rpx auto 0 0;
}
.coupon-List .coupon-item .wrap .functions {
  width: 195rpx;
  height: 220rpx;
  display: flex;
  border-radius: 0 10px 10px 0;
  flex-direction: column;
  justify-content: center;
  background-color: #ffffff;
}
.coupon-List .coupon-item .wrap .functions .un-used {
  margin: 0 30rpx 0 auto;
  color: #ffffff;
  width: 120rpx;
  height: 50rpx;
  background-color: #FA3534;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.coupon-List .coupon-item .wrap .functions image {
  width: 100rpx;
  height: 100rpx;
  margin: 0 30rpx 0 auto;
}
.coupon-List .coupon-item .coupon-detail {
  display: flex;
  flex-direction: row;
  width: 100%;
  background-color: #ffffff;
  border-radius: 10px;
}
.coupon-List .coupon-item .coupon-detail .info {
  margin: 20rpx 20rpx 20rpx 20rpx;
  color: #999999;
  font-size: 27rpx;
}

