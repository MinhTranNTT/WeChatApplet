/* 水平间距 */
.adv {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.adv .tips {
  position: fixed;
  z-index: 2;
  top: 20rpx;
  right: 20rpx;
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  color: #ffffff;
  border-radius: 20rpx;
  background-color: rgba(138, 137, 137, 0.5);
}
.adv .tips .adv-time {
  margin: 10rpx 5rpx 10rpx 10rpx;
}
.adv .tips .jump {
  margin: 10rpx 10rpx 10rpx 6rpx;
}
.adv .adv-image {
  position: relative;
  z-index: 0;
  width: 100vw;
  height: 100vh;
}

