/* 水平间距 */
swiper {
  height: 500rpx;
}
swiper swiper-item {
  width: 100%;
  height: 100%;
}
swiper swiper-item image {
  width: 100%;
  height: 100%;
}
.campType {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.campType .category-item .category-icon {
  background-color: #0054BC;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
}
.campType .category-item .category-icon image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 15rpx;
}
.campType .category-item .category-name {
  color: #0054BC;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  margin-top: 10rpx;
}
.productList {
  height: 718rpx;
}
.productList .product-image {
  width: 100%;
  height: 500rpx;
  position: relative;
}
.productList .product-image .cover {
  height: 500rpx;
  width: 100%;
}
.productList .product-image .age-location-time {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items: center;
  background-color: rgba(25, 25, 25, 0.4);
  color: #FFFFFF;
  width: 400rpx;
  height: 70rpx;
  margin-bottom: 0;
  margin-top: auto;
  font-size: 25rpx;
}
.productList .product-image .age-location-time image {
  width: 30rpx;
  height: 30rpx;
  justify-content: center;
  align-items: center;
}
.productList .product-image .age-location-time .age {
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-right: 10rpx;
}
.productList .product-image .age-location-time .location {
  display: flex;
  flex-direction: row;
  margin-right: 10rpx;
}
.productList .product-image .age-location-time .time {
  display: flex;
  flex-direction: row;
}
.productList .product-detail {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.productList .product-detail .product-name {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
}
.productList .product-detail .product-name .name-category {
  display: flex;
  flex-direction: column;
  width: 550rpx;
  border-right: 1px solid;
  border-image: linear-gradient(#fff, #ddd, #ccc, #ddd, #fff) 1;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.productList .product-detail .product-name .name-category .name {
  font-size: 32rpx;
  font-weight: 700;
}
.productList .product-detail .product-name .name-category .category {
  margin-top: 6rpx;
  color: #ACACAC;
  font-size: 28rpx;
  font-weight: 400;
}
.productList .product-detail .product-name .price {
  display: flex;
  align-items: center;
  margin-left: auto;
  margin-right: 30rpx;
  color: #F6511D;
}
.productList .product-detail .campList {
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
}
.productList .product-detail .campList .canSign {
  color: #ACACAC;
  font-size: 26rpx;
  font-weight: 400;
  margin-right: 10rpx;
}
.productList .product-detail .campList .product-camp {
  color: #FCAB10;
  display: flex;
  text-align: center;
  align-items: center;
  font-size: 25rpx;
  padding-left: 2px;
  padding-right: 2px;
  border-right: #FCAB10 1px solid;
}
.productList .product-detail .campList .product-camp:last-child {
  border: none;
}
.productList .divide {
  height: 50rpx;
  width: 100%;
  background-color: #EFEFF4;
}
.empty-area {
  width: 100%;
  height: 150rpx;
  background-color: #EFEFF4;
}
.contact-btn {
  position: fixed;
  bottom: 100rpx;
  right: 30rpx;
  background-color: #002A50;
  width: 100rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
}
.contact-btn .contact-text {
  font-size: 20rpx;
  color: #ffffff;
}

